@model elfbar_shop.Models.OrderHistoryViewModel

<div class="modal fade" id="createOHistory">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title text-center" id="createOHistoryLabel">ПРОДАЖ ТОВАРУ</h3>
                <button type="button" class="close" data-dismiss="modal">
                    <span class="text-white">x</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="@Url.Action("CreateOHistory","OrderHistory")">
                    <div class="form-group">
                        <h4>ТИП ТОВАРУ: @Model.product_type</h4>
                        <input type="hidden" value="@Model.product_type" asp-for="product_type" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <h4>НАЗВА: @Model.product_name</h4>
                        <input type="hidden" value="@Model.product_name" asp-for="product_name" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <h4>ПРОДАЄ: @Model.seller_alias</h4>
                        <input type="hidden" value="@Model.seller_alias" asp-for="seller_alias" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <h4>ДАТА ПРОДАЖУ: @Model.order_date.ToString("dd.MM.yyyy")</h4>
                        <input type="hidden" value="@Model.order_date" asp-for="order_date" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <h4>ЦІНА: </h4>
                        <input value="@Model.cost" asp-for="cost" placeholder="ВКАЖІТЬ ЦІНУ" class="form-control" />
                        <span asp-validation-for="cost" class="text-danger text-center"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">СКАСУВАТИ</button>
                <button type="button" class="btn btn-success" data-toOHistory="modal">НА ПРОДАЖ</button>
            </div>
        </div>
    </div>
</div>
