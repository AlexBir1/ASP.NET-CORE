@model WebHostel.Models.HostelViewModel

<div class="nav-item">
    <div asp-validation-summary="All" class="text-danger"></div>
</div>
<form asp-action="CreateHostel" method="post">
    <div class="card">
        <div class="card-header">
            <h3>Добавить отель</h3>
        </div>
        <div class="card-body">
            <div class="card-group">
                <label>Название: </label>
                <input asp-for="title" name="title" placeholder="Название" />
            </div>
            <div class="card-group">
                <label>Адрес: </label>
                <input asp-for="location" name="location" placeholder="Адрес" />
            </div>
            <div class="card-group">
                <label>Описание: </label>
                <input asp-for="info" name="info" placeholder="Описание" />
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-success" type="submit">Добавить</button>
        </div>
    </div>
</form>
