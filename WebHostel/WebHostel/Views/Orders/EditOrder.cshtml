@model WebHostel.Models.OrdersViewModel

<div class="nav-item">
    <div asp-validation-summary="All" class="text-danger"></div>
</div>
<form asp-action="EditOrder" method="post">
    <div class="card">
        <div class="card-header">
            <h3>Изменение данных заказа</h3>
        </div>
        <div class="card-body">
            <div class="card-text">
                <label>Номер клиента: </label>
                <input asp-for="customer_num" name="customer_num" placeholder="Номер клиента" value="@Model.customer_num"/>
            </div>
            <div class="card-text">
                <label>Название: </label>
                <input asp-for="title" name="title" placeholder="Название" value="@Model.title"/>
            </div>
            <div class="card-text">
                <label>Цена: </label>
                <input asp-for="cost" name="cost" placeholder="Цена" value="@Model.cost"/>
            </div>
            <div class="card-text">
                <label>Количество: </label>
                <input asp-for="quantity" name="quantity" placeholder="Количество" value="@Model.quantity"/>
            </div>
            <div class="card-text">
                <label>Номер работника, принявшего заказ: </label>
                <input asp-for="cafe_employees_num" name="cafe_employees_num" placeholder="Номер клиента" value="@Model.cafe_employees_num"/>
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-success">Изменить</button>
        </div>
    </div>
</form>
