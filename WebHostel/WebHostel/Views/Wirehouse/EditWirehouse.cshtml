@model WebHostel.Models.WirehouseViewModel

<form asp-action="EditWirehouse" method="post">
<div class="card">
    <div class="card-header">
        <h3>Изменение данных склада</h3>
    </div>
    <div class="card-body">
        <div class="card-text">
            <label>Название: </label>
            <input asp-for="title" name="title" placeholder="Название" value="@Model.title" />
        </div>
        <div class="card-text">
            <label>Макс. кол-во товаров: </label>
            <input asp-for="maxProducts" name="maxProducts" placeholder="Кол-во" value="@Model.maxProducts" />
        </div>
        <div class="card-text">
            <label>Отель: </label>
            <input asp-for="hostel_name" name="hostel_name" placeholder="Отель" value="@Model.hostel_name" />
        </div>
    </div>
    <div class="card-footer">
        <button class="btn btn-success" type="submit">Изменить</button>
    </div>
</div>
</form>
