@model List<WebHostel.Models.DocumentationViewModel>
<a class="btn btn-link" asp-action="CreateDocumentation">Добавить</a>
@if (Model.Count() == 0 || Model == null)
{
    <div asp-validation-summary="All" class="text-warning"></div>
}
@if (Model.Count() != 0)
{
    @foreach (var d in Model)
    {
        <div class="card">
            <div class="card-header">
                <h3>@d.fullname</h3>
            </div>
            <div class="card-body">
                <div class="card-group">
                    <label>Номер телефона: @d.phone</label>
                </div>
                <div class="card-group">
                    <label>Дата регистрации: @d.regdate.ToString("dd.MM.yyyy")</label>
                </div>
                <div class="card-group">
                    <label>Статус: @d.fullstatus</label>
                </div>
                <div class="card-group">
                    <label>Отель регистрации: @d.hostel_name</label>
                </div>
            </div>
            <div class="card-footer">
                <a class="btn btn-warning" asp-action="EditDocumentation" asp-route-id="@d.id">Изменить</a>
                <label> || </label>
                <a class="btn btn-danger" asp-action="DeleteDocumentation" asp-route-id="@d.id">Удалить</a>
            </div>
        </div>
    }
}