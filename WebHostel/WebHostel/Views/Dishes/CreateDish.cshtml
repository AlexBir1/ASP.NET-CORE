 @model WebHostel.Models.DishesViewModel

 <div class="nav-item">
    <div asp-validation-summary="All" class="text-danger"></div>
</div>
 <form asp-action="CreateDish">
<div class="card">
        <div class="card-header">
            <h3>Создать блюдо</h3>
        </div>
        <div class="card-body">
             <div class="card-group">
                <label>Название: </label>
                <input type="text" asp-for="title" name="title" placeholder="Название"/>
            </div>
            <div class="card-group">
                <label>В составе: </label>
                <textarea asp-for="ingreds" name="ingreds" placeholder="Ингредиенты"></textarea>
            </div>
            <div class="card-group">
                <label>Цена: </label>
                <input type="number" asp-for="cost" name="cost" placeholder="Цена"/>
            </div>
            <div class="card-group">
                <label>Подаётся в кафе: </label>
                <input type="text" asp-for="cafe_name" name="cafe_name" placeholder="Кафе"/>
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-success" type="submit">Создать</button>
        </div>
    </div>
    </form>
