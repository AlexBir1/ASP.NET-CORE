@model List<WebHostel.Models.EmployeesViewModel>
<div class="text-sm-right">
<a class="btn btn-primary" asp-controller="Employees" asp-action="Register">Добавить работника отеля</a>
</div>
@if (Model == null)
{
    <div asp-validation-summary="All" class="text-warning"></div>
}
@if(Model != null)
@foreach (var e in Model)
{
    <div class="card">
        <div class="card-header">
           <label> @e.fullname</label>
        </div>
        <div class="card-body">
            <div class="card-columns">
                <label>Номер телефона: @e.phone</label>
            </div>
        </div>
        <div class="card-footer">
                <a asp-action="DeleteEmployee" asp-route-id="@e.id">Удалить</a>
                <label> || </label>
                <a asp-action="EditEmployee" asp-route-id="@e.id">Редактировать</a>
                <label> || </label>
                <a asp-action="GetEmployee" asp-route-id="@e.id">Информация</a>
        </div>
    </div>
<br />
}