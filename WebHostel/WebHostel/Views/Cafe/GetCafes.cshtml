    @model List<WebHostel.Models.CafeViewModel>
    <a asp-action="CreateCafe">Добавить кафе</a>
    @foreach (var c in Model)
{
    <div class="card">
        <div class="card-header">
            <label>Кафе при отеле</label>
        </div>
        <br />
        <div class="card-body">
            <div class="card-group">
                <label>Название: @c.title</label>
            </div>
            <br />
            <div class="card-group">
                <label>Отель при котором расположено кафе: @c.hostel_name</label>
            </div>
            <br />
        </div>
        <div class="card-footer">
            <a class="btn btn-warning" asp-action="EditCafe" asp-route-id="@c.id">Изменить</a>
            <label> || </label>
            <a class="btn btn-danger" asp-action="DeleteCafe" asp-route-id="@c.id">Удалить</a>
        </div>
    </div>
    <br />
}
