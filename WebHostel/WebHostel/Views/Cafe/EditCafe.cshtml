@using System.Security.Claims
@model WebHostel.Models.CafeViewModel

<div class="nav-item">
    <div asp-validation-summary="All" class="text-danger"></div>
</div>
<form asp-action="EditCafe">
    <div class="card">
        <div class="card-header">
            <label>Изменение данных кафе</label>
        </div>
        <br />
        <div class="card-body">
        <div class="card-group">
            <input asp-for="title" name="title" placeholder="Название" value="@Model.title/>
        </div>
        <br />
        <div class="card-group">
            <input asp-for="hostel_name" name="hostel_name" placeholder="Отель" value="@Model.hostel_name"/>
        </div>
        <br />
        </div>
        <div class="card-footer">
            <button type="submit">Изменить</button>
        </div>
    </div>
</form> 
