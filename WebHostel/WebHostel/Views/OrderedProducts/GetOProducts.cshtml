@model List<WebHostel.Models.ordered_productsViewModel>

@if (Model.Count() == 0 || Model == null)
{
    <div asp-validation-summary="All" class="text-warning"></div>
}
@if (Model.Count() != 0 || Model != null)
{
    @foreach (var op in Model)
    {
        <div class="card">
            <div class="card-header">
                <h3>@op.title</h3>
            </div>
            <div class="card-body">
                <div class="card-group">
                    <label>Тип: @op.specie</label>
                </div>
                <div class="card-group">
                    <label>Дата заказа: @op.order_date.ToString("dd.MM.yyyy")</label>
                </div>
                <div class="card-group">
                    <label>Колиество: @op.quantity</label>
                </div>
                <div class="card-group">
                    <label>Отель: @op.hostel_name</label>
                </div>
                <div class="card-group">
                    <label>Цена: @op.cost</label>
                </div>
            </div>
            <div class="card-footer">
                <a class="btn btn-warning" asp-action="EditOProduct" asp-route-id="@op.id">Изменить</a>
                <label> || </label>
                <a class="btn btn-danger" asp-action="DeleteOProduct" asp-route-id="@op.id">Удалить</a>
            </div>
        </div>
        <br />
    }
}