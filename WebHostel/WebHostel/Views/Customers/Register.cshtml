
@model WebHostel.Models.CRegisterViewModel
@{
    ViewData["Title"] = "Регистраиця";
}

<div class="nav-item">
    <div asp-validation-summary="All" class="text-danger"></div>
</div>
<form method="post" asp-controller="Customers" asp-action="Register">
    <div class="card col-md-8">

        <div class="card-header text-center"><label>Регистрация пользователя</label></div>
        <div class="card-body">
            <div class="card-columns">
                <label>ФИО: </label>
                <input asp-for="fullname" name="fullname" placeholder="ФИО "/>
            </div>
            <br />
            <div class="card-columns">
                <label>Номер телефона: </label>
                <input asp-for="phone" name="phone" placeholder="Номер телефона "/>
            </div>
            <br />
            <div class="card-columns">
                <label>Выбранный отель: </label>
                <input asp-for="hostel_name" name="hostel_name" placeholder="Выбранный отель "/>
            </div>
            <br />
            <div class="card-columns">
                <label>Логин: </label>
                <input asp-for="login" name="login" placeholder="Логин "/>
            </div>

            <br />
            <div class="card-columns">
                <label>Пароль: </label>
                <input asp-for="password" name="password" placeholder="Пароль "/>
            </div>
            <br />
            <div class="card-columns">
                <label>Повторите пароль: </label>
                <input asp-for="Confirm_password" name="Confirm_password" placeholder="Пароль "/>
            </div>
            <br />
            <div class="card-columns">
                <button class="btn btn-primary" type="submit">Регистраиця</button>
            </div>
            <br />
            <div class="card-footer text-center"><label>Обязательно проверьте введённые данные!</label></div>
        </div>
    </div>
</form>