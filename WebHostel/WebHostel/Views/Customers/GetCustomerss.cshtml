@model List<WebHostel.Models.CustomersViewModel>

@if (Model == null)
{
    <div asp-validation-summary="All" class="text-warning"></div>
}
@if (Model != null)
{
    @foreach (var c in Model)
    {
        <div class="card">
            <div class="card-header">
                <h3>@c.fullname</h3>
            </div>
            <div class="card-body">
                <div class="card-text">
                    <label>Номер телефона: @c.phone</label>
                </div>
                <div class="card-text">
                    <label>Отель регистрации: @c.hostel_name</label>
                </div>
                <div class="card-text">
                    <label>Логин(Email): @c.login</label>
                </div>
            </div>
            <div class="card-footer">
                <a class="btn btn-warning" asp-action="EditCustomers" asp-route-id="@c.id">Изменить</a>
                <label> || </label>
                <a class="btn btn-danger" asp-action="DeleteCustomers" asp-route-id="@c.id">Удалить</a>
            </div>
        </div>
        <br />
    }
}