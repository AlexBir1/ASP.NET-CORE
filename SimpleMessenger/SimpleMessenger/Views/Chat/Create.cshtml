@model List<SimpleMessenger.Shared.Account>

@{
    ViewData["Title"] = "New chat";
}

<div class="row" style="margin-top:30px; justify-content:center">
    <div class="col-lg-7">
        <div class="card" style="min-height:500px; max-height:501px; overflow-y:scroll; text-align:center">
            @foreach (var i in Model)
            {
                <div class="card" style="padding:5px 5px 5px 5px; margin:10px 10px 10px 10px">
                    <form asp-action="Create" method="post">
                        <div class="row">
                            <div class="col-lg-12 text-left">
                                <input name="toUserId" type="hidden" value="@i.Id" />
                                <label class="font-weight-bold">@i.UserName</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 text-right">
                                <button type="submit" class="btn btn-primary"><i class="bi bi-send-plus"></i> To chat</button>
                            </div>
                        </div>
                    </form>
                </div>
            }
        </div>
    </div>
</div>

