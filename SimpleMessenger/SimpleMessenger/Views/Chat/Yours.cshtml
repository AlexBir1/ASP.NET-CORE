@using System.Security.Claims
@model List<SimpleMessenger.Shared.Chat>

@{
    ViewData["Title"] = "Chats";
}

<div id="mainDiv" style="margin-top:50px">
    <div style="margin-bottom:22px; text-align:center">
        <a class="btn btn-primary" asp-action="Create">
            Create new chat
        </a>
    </div>
    <div class="row" style="margin-top:30px; justify-content:center">
        <div class="col-lg-7">
            <div class="card" style="min-height:500px; max-height:501px; overflow-y:scroll; text-align:center; background-color:rgb(166, 164, 164);">
                @if (Model.Count != 0)
                {
                    foreach (var i in Model)
                    {
                        <div class="card" style="padding:5px 15px 5px 5px; margin:10px 10px 10px 10px; background-color:rgb(237, 237, 237); border:1px solid black; border-radius:20px">
                            <div class="row">
                                <div class="col-lg-12 text-left">
                                    <div class="font-weight-bold text-left">
                                        @if (i.FromUserByName == User.FindFirstValue(ClaimTypes.Name))
                                        {
                                            @i.ToUserByName
                                        }
                                        else
                                        {
                                            @i.FromUserByName
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12 text-right">
                                    <a class="btn btn-primary" asp-action="ById" asp-route-Id="@i.Id">Open</a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

