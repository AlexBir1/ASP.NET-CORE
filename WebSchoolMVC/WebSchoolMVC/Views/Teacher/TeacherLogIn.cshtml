
@model WebSchoolMVC.Models.LogInViewModel

<div id="mainDiv">
    <div class="text-center">
        <h1 style="margin-bottom:100px; margin-top:30px">Log in as teacher</h1>
    </div>
    <div class="row" style="justify-content:center">
        <div class="col-lg-7">
            <div class="card">
                <form asp-controller="Teacher" asp-action="TeacherLogIn">
                    <div class="card-header">
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="lgn">Login</label>
                            <input id="lgn" asp-for="Login" class="form-control" placeholder="Enter login" />
                            <span class="text-danger" asp-validation-for="Login"></span>
                        </div>
                        <div class="form-group">
                            <label for="pass">Password</label>
                            <input id="pass" asp-for="Password" class="form-control" placeholder="Enter password" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                    </div>
                    <div class="card-footer" style="display:flex; justify-content:center">
                        <button type="submit" class="btn btn-outline-primary">Log in</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
