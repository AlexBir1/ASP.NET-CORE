@model List<WebSchoolMVC.Domain.Entity.Group>

<div id="mainDiv">
    <div class="text-lg-center fs-1" style="margin-bottom:60px">
        Group page <i id="gCreate" class="bi bi-plus-circle link-success" data-url="@Url.Action("Create","Group")" onclick="openPartialClick(this)" style="cursor:pointer"></i>
    </div>
    <br />
    <div class="row border bg-secondary card-list-nobody" id="groups">
        @foreach (var x in Model)
        {
            <div id="group_@x.Id" class="col-lg-3" style="margin-bottom:15px">
                <div class="card">
                    <div class="card-header">
                        <label class="card-title fs-3">
                            @x.Title
                        </label>
                        <br />
                        <label class="card-subtitle">
                            GROUP ID: @x.Id
                        </label>
                    </div>
                    <div class="card-footer text-center">
                        <a class="btn btn-primary" asp-action="GetById" asp-route-Id="@x.Id">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
