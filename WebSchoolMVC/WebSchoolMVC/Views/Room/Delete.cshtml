@model WebSchoolMVC.Domain.Entity.Room

<div class="modal fade" id="DeleteRoom" style="position:center">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete room (RID: @Model.Id)</h5>
                <button type="button" class="btn-close" onclick="closePartialClick(this)" aria-label="Close">
                    <span area-hidden="true"></span>
                </button>
            </div>
            <div class="modal-body">
                <form id="RoomData" asp-controller="Room" asp-action="Delete" method="post">
                    <input asp-for="Id" type="hidden" value="@Model.Id" />
                    <div class="form-group">
                        <label for="rNumber" class="form-label">Number</label>
                        <input asp-for="Number" class="form-control" id="rNumber" placeholder="Enter number">
                    </div>
                    <div class="form-group">
                        <label for="rFloor" class="form-label">Floor</label>
                        <input asp-for="Floor" class="form-control" id="rFloor" placeholder="Enter floor">
                    </div>
                    <div class="form-group">
                        <label for="rFloor" class="form-label">Floor</label>
                        <input asp-for="Floor" class="form-control" id="rFloor" placeholder="Enter floor">
                    </div>
                </form>
                <div class="text-center">
                        <label class="card-title fs-4">Room`s caretaker</label>
                    </div>
                <div class="row" style="justify-content:center">

                        @if (Model.Teacher is not null)
                        {
                            <div class="col-lg-10">
                                <div class="card">
                                    <div class="card-header">
                                        <label class="card-title fs-3">
                                            @Model.Teacher.Fullname
                                        </label>
                                        <br />
                                        <label class="card-subtitle">
                                            TEACHER ID: @Model.Teacher.Id
                                        </label>
                                    </div>
                                    <div class="card-body">
                                        <div class="card-group">
                                            <label class="card-text">Mobile number: @Model.Teacher.MobileNumber</label>
                                        </div>
                                        <div class="card-group">
                                            <a class="link-primary" asp-controller="Teacher" asp-action="GetById" asp-route-Id="@Model.Teacher.Id">Details</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="text-center">
                                <label class="card-title">No teacher takes care of this room.</label>
                            </div>
                        }
                    </div>
            </div>
            <div class="modal-footer" style="justify-content:center">
                <button onclick="saveClick(this)" type="button" class="btn btn-danger"><i class="bi bi-cassette"></i> Proceed</button>
                <button onclick="closePartialClick(this)" type="button" class="btn btn-success"><i class="bi bi-x-circle"></i> Cancel</button>
            </div>
        </div>
    </div>
</div>