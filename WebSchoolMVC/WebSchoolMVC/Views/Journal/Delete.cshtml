@model WebSchoolMVC.Domain.Entity.Journal

<div class="modal fade" id="DeleteNote">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete note (NID: @Model.Id)</h5>
                <button type="button" class="btn-close" onclick="closePartialClick(this)" aria-label="Close">
                    <span area-hidden="true"></span>
                </button>
            </div>
            <div class="modal-body">
                <form id="NoteData" asp-controller="Journal" asp-action="Delete" method="post">
                    <input asp-for="Id" type="hidden" value="@Model.Id" />
                    <div class="form-group">
                        <div class="card border-primary">
                            <div class="card-header text-center fs-4">
                                <label class="card-title">
                                    Student`s info
                                </label>
                            </div>
                            <div class="card-body">
                                <p class="card-text">SID: @Model.Student.Id</p>
                                <p class="card-text">Fullname: @Model.Student.Fullname</p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="card-header text-center fs-4">
                                <label class="card-title">
                                    Subject`s info
                                </label>
                            </div>
                        <div class="card border-primary">
                            <div class="card-body">
                                <p class="card-text">SID: @Model.Subject.Id</p>
                                <p class="card-text">Title: @Model.Subject.Title</p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="card-header text-center fs-4">
                                <label class="card-title">
                                    Note`s info
                                </label>
                            </div>
                        <div class="card border-primary">
                            <div class="card-body">
                                <p class="card-text">Mark: @Model.Mark</p>
                                <p class="card-text">Marking date: @Model.MarkingDate.ToString("MM/dd/yyyy")</p>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer" style="justify-content:center">
                <button onclick="removeClick(this)" type="button" class="btn btn-danger"><i class="bi bi-cassette"></i> Proceed</button>
                <button onclick="closePartialClick(this)" type="button" class="btn btn-success"><i class="bi bi-x-circle"></i> Discard</button>
            </div>
        </div>
    </div>
</div>