@model WebSchoolMVC.Domain.Entity.Journal

<div id="mainDiv">
    <div class="text-lg-center fs-1" style="margin-bottom:100px">
        Journal`s note
    </div>
    <div class="row" style="justify-content:center">
        <div id="Note_@Model.Id" class="col-lg-8">
            <div class="card">
                <div class="card-header" position="relative">
                    <div class="dropdown" style="position:absolute; top:10px; right:10px; ">
                            <a class="btn btn-outline-primary" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="bi bi-list-ul" style="font-size:18px"></i></a>
                            <div class="dropdown-menu">
                                <button class="dropdown-item" onclick="openPartialClick(this)" asp-action="Update" asp-route-Id="@Model.Id"><i class="bi bi-pencil-square"></i> Edit</button>
                                <button class="dropdown-item" onclick="openPartialClick(this)" asp-action="Delete" asp-route-Id="@Model.Id"><i class="bi bi-trash3-fill"></i> Delete</button>
                            </div>
                        </div>
                    <label class="card-title fs-3">
                        Note №@Model.Id
                    </label>
                </div>
                <div class="card-body">
                    <div class="card-group">
                        <div class="card">
                            <div class="card-header">
                                <label class="card-title">Details</label>
                            </div>
                            <div class="card-body">
                                <div class="card-group">
                                    <label class="card-text">Mark: @Model.Mark</label>
                                </div>
                                <div class="card-group">
                                    <label class="card-text">Marking date: @Model.MarkingDate.ToString("MM/dd/yyyy")</label>
                                </div>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header">
                                <label class="card-title">Student</label>
                            </div>
                            <div class="card-body">
                                <div class="card-group">
                                    <label class="card-text">Fullname: @Model.Student.Fullname</label>
                                </div>
                                <div class="card-group">
                                    <label class="card-text">Mobile number: @Model.Student.MobileNumber</label>
                                </div>
                                <div class="card-group">
                                    <a class="link-primary" asp-controller="Student" asp-action="GetById" asp-route-Id="@Model.Student.Id">Details</a>
                                </div>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header">
                                <label class="card-title">Subject</label>
                            </div>
                            <div class="card-body">
                                <div class="card-group">
                                    <label class="card-text">Title: @Model.Subject.Title</label>
                                </div>
                                <div class="card-group">
                                    <a class="link-primary" asp-controller="Subject" asp-action="GetById" asp-route-Id="@Model.Subject.Id">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-lg-6">
                            <button class="btn btn-warning" onclick="openPartialClick(this)" asp-action="Update" asp-route-Id="@Model.Id">Edit</button>
                        </div>
                        <div class="col-lg-6">
                            <button class="btn btn-danger" onclick="openPartialClick(this)" asp-action="Delete" asp-route-Id="@Model.Id">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
